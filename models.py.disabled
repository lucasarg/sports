# ğŸ‘¥ Players section
# ----------------------------------------

@main.route("/players")
def view_players():
    # Optional filtering by team and search term
    team_id = request.args.get("team", type=int)
    search = request.args.get("search", "", type=str).strip().lower()

    teams = Team.query.order_by(Team.name).all()
    query = Player.query

    if team_id:
        query = query.filter_by(team_id=team_id)

    if search:
        query = query.filter(
            db.or_(
                Player.name.ilike(f"%{search}%"),
                Player.position.ilike(f"%{search}%")
            )
        )

    players = query.all()
    return render_template("players.html", players=players, teams=teams, selected_team=team_id, search=search)


@main.route("/add-player", methods=["GET", "POST"])
def add_player():
    form = PlayerForm()
    form.team_id.choices = [(team.id, team.name) for team in Team.query.all()]  # ğŸ§© Populate team dropdown

    if form.validate_on_submit():
        new_player = Player(
            name=form.name.data,
            position=form.position.data,
            age=form.age.data,
            team_id=form.team_id.data  # âœ… Correct assignment
        )
        db.session.add(new_player)
        db.session.commit()
        flash(f"Player {new_player.name} added successfully âœ…", "success")
        return redirect(url_for("main.view_players"))

    return render_template("add_player.html", form=form)


@main.route("/edit-player/<int:id>", methods=["GET", "POST"])
def edit_player(id):
    player = Player.query.get_or_404(id)
    form = PlayerForm(obj=player)

    form.team_id.choices = [(team.id, team.name) for team in Team.query.all()]  # ğŸ§© Populate choices again

    if form.validate_on_submit():
        player.name = form.name.data
        player.position = form.position.data
        player.age = form.age.data
        player.team_id = form.team_id.data

        db.session.commit()
        flash(f"{player.name} updated successfully âœ…", "success")
        return redirect(url_for("main.view_players"))

    return render_template("edit_player.html", form=form, player=player)


@main.route("/delete-player/<int:id>", methods=["POST"])
def delete_player(id):
    player = Player.query.get_or_404(id)
    db.session.delete(player)
    db.session.commit()
    flash(f"Player '{player.name}' deleted successfully ğŸ—‘ï¸", "info")
    return redirect(url_for("main.view_players"))


@main.route("/players/<int:id>")
def player_detail(id):
    player = Player.query.get_or_404(id)
    return render_template("player_detail.html", player=player)



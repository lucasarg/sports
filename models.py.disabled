@main.route("/api/players")
def api_players():
    players = Player.query.all()
    data = [
        {
            "id": player.id,
            "name": player.name,
            "position": player.position,
            "age": player.age,
            "team": {
                "id": player.team.id,
                "name": player.team.name,
                "city": player.team.city
            } if player.team else None
        }
        for player in players
    ]
    return jsonify(data)


